{% extends "mp.qa.layout.html.twig" %}
{% block mp_qa_content %}
    <h3>
        {{ user.nickname }}
    </h3>
    <h4>
        Interests
    </h4>
    <div>
    {% for interest in user.interests %}
        <div>
            <span class="muted">{{ interest.question.createdAt|date('Y-m-d') }}</span> -  <a href="{{ path('mp_qa_question_show',{id:interest.question.id,title:interest.question.title|slugify}) }}">{{ interest.question.title }}</a>
        </div>
    {% endfor %}
    </div>
    <h4>Contributions</h4>
    {% for answer in user.answers %}
        <h6>
            {{ answer.question.title }}
        </h6>
        <div>
            <span class="muted">{{ answer.createdAt|date('Y-m-d') }}</span> - <a href="{{ path('mp_qa_question_show',{id:answer.question.id,title:answer.question.title|slugify}) }}">{{ answer.body|slice(0,100) ~ '...' }}</a>
        </div>
    {% endfor %}
    <h4>Questions</h4>
    {% for question in user.questions %}
        <div>
            <span class="muted">{{ question.createdAt|date('Y-m-d') }}</span> -  <a href="{{ path('mp_qa_question_show',{id:question.id,title:question.title|slugify}) }}">{{ question.title }}</a>
        </div>
        <div>
            {{ question.body|slice(0,150)~'...' }}
        </div>
    {% endfor %}
{% endblock %}