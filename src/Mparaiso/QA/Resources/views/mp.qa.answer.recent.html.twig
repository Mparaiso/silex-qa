{% extends app['mp.qa.twig.layout'] %}
{% block mp_qa_content %}
    <h3>Recent Answers.</h3>
    <hr>
    <div class="">
        {% if answers|length > 0 %}
        {% for a in answers %}
                {% include 'mp.qa.question.row.html.twig' with {question:a.question} %}
                {% include 'mp.qa.answer.row.html.twig' with {answer:a} %}
                <hr/>
        {% endfor %}
        {% else %}
            <h4>No answer found.</h4>
        {% endif %}
        <div class="pagination pagination-centered">
            {% include 'crud/includes/pagination.html.twig' %}
        </div>
    </div>
{% endblock %}